{
  "name": "zimple/fusion-ing-cashflow-mvp",
  "description": "MVP de flujo de caja en PHP 8 + MySQL + Docker",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "phpdocumentor/shim": "^3.8",
    "phpoffice/phpspreadsheet": "^2.1",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "config": {
    "platform": {
      "php": "8.2.0"
    },
    "sort-packages": true,
    "allow-plugins": {
      "phpdocumentor/shim": true
    }
  },
  "scripts": {
    "start": [
      "php -S localhost:8000 -t public"
    ]
  },
  "require-dev": {
    "phpdocumentor/phpdocumentor": "^3.8"
  }
}
